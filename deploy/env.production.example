# Production Environment Variables for DigitalOcean Droplet
# Copy this file to /var/www/vehicle-parts-api/.env and update with your values

# Django Settings
SECRET_KEY=your-production-secret-key-here-change-this
DEBUG=False
ALLOWED_HOSTS=206.189.137.79,your-domain.com,localhost,127.0.0.1

# MySQL Database Settings
DB_NAME=vehicle_parts
DB_USER=vehicle_parts_user
DB_PASSWORD=your-secure-database-password-here
DB_HOST=localhost
DB_PORT=3306

# Email Settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@vehicleparts.com

# AWS S3 Configuration (Optional - set to False if not using S3)
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1

# AWS CloudWatch Logs Configuration (Optional)
USE_CLOUDWATCH_LOGS=False
AWS_CLOUDWATCH_LOG_GROUP=vehicle-parts-api
AWS_CLOUDWATCH_REGION_NAME=us-east-1

# WhatsApp Configuration (Twilio) - Optional
TWILIO_WHATSAPP_ENABLED=False
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_ENVIRONMENT=sandbox
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

